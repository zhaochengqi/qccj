<script type="text/javascript" src="http://v3.jiathis.com/code/jia.js" charset="utf-8"></script>
<script>
//挂载最新资讯
import Inner_zixun from '@/page/news/zixun'
//挂载专题
import Inner_zhuanti from '@/page/index/zhuanti'
//挂载友情链接
import Inner_links from '@/page/index/links'
//挂载顶一下猜一下
import Inner_zan from '@/page/zhiku/zan'
//挂载广告
import Inner_guanggao from '@/page/news/guanggao'

export default {
    beforeCreate: function() {
        //设置当前页面标题名称
        document.title = this.$route.meta.pagename;
    },
    activated: function() {
        if (this.$route.params.id) {
            this.getData(this.$route.params.id);
        } else {
            this.$message.error('未查询到相关信息！')
        }
    },
    data() {
        return {
            formData: {},
            advert: {},
            article: [],
            loading: false,
            type: '',
            guanggaoData: {}
        }
    },
    methods: {
        //接收子组件传送过来的数据
        CB_dialogStatus(val) {
            // this.dialog = false
        },
        //相关文章
        tiaoImage(val) {
            this.getData(val)
            this.$router.push({
                name: 'details',
                params: {
                    id: val
                }
            })
        },
        //最新资讯
        CB_zuixingzixun(val) {
            this.getData(val)
            this.$router.push({
                name: 'details',
                params: {
                    id: val
                }
            })
        },
        //分享插件
        init: function() {
            let url = 'https://cdnjs.cloudflare.com/ajax/libs/social-share.js/1.0.16/js/social-share.min.js'
            let script = document.createElement('script')
            script.setAttribute('src', url)
            document.getElementsByTagName('head')[0].appendChild(script)
        },
        getData(id) {
            this.loading = true
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/home_api/news/read',
                data: {
                    id: id
                }
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.formData = response.data.data
                    document.querySelector('meta[name="keywords"]').content = response.data.data.keyword
                    document.querySelector('meta[name="description"]').content = response.data.data.miaoshu
                    document.title = response.data.data.title
                }
                this.loading = false
            }, (error) => {
                this.loading = false
                this.$emit('API-ERR');
            })
        },
    },
    mounted() {
        this.init()
    },
    components: {
        Inner_zixun,
        Inner_zhuanti,
        Inner_links,
        Inner_zan,
        Inner_guanggao
    }
}
</script>
