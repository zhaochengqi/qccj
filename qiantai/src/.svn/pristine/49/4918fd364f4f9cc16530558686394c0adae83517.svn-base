                            <p v-html="zazhiData.content"></p>
                            <el-button size="large" type="danger" class="margin-top-50 padding-left-30 padding-right-30 pull-right"> <a :href="zazhiData.pdf_file " style="color:white;">立即下载</a> </el-button>
                        </div>
                    </el-col>
                </el-row>
                <Index_zazhi></Index_zazhi>
            </div>
        </div>
    </div>
</template>
<script>
//挂载杂志详情
import Index_zazhi from '../zazhi/details'
export default {
    activated: function() {
        this.getZazhi()
    },
    data() {
        return {
            loading: false,
            zazhiData: {},
            zhuantiData: []
        };
    },
    methods: {
        //获取杂志数据
        getZazhi() {
            this.loading = true
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/home_api/zazhi/read',
                data: {
                    id: this.$route.params.id
                }
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.zazhiData = response.data.data
                    document.querySelector('meta[name="keywords"]').content = response.data.data.keywords.join(',')
                    document.querySelector('meta[name="description"]').content = response.data.data.miaoshu
                }
                this.loading = false
            }, (error) => {
                this.loading = false
                this.$emit('API-ERR')
            })
        },
    },
    components: {
        Index_zazhi
    }
}
</script>
