<script type="text/javascript" src="http://v3.jiathis.com/code/jia.js?uid=2139217" charset="utf-8"></script>
<script>
//挂载最新资讯
import Inner_zixun from '@/page/news/zixun'
//挂载专题
import Inner_zhuanti from '@/page/index/zhuanti'
//挂载友情链接
import Inner_links from '@/page/index/links'
export default {
    activated: function() {
        this.getData();
    },
    data() {
        return {
            formData: {},
            advert: {},
            article: [],
            loading: false,
            id: this.$route.params.id
        }
    },
    methods: {
        tiaoImage(id) {
            this.id = id;
            this.getData()
            this.$router.push({
                name: 'details',
                params: {
                    id: id
                }
            })
        },
        getData() {
            this.loading = true
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/home_api/news/details',
                data: {
                    id: this.id,
                    type: '资讯内页'
                }
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.formData = response.data.news
                    this.advert = response.data.guangao
                    this.article = response.data.article
                }
                this.loading = false
            }, (error) => {
                this.loading = false
                this.$emit('API-ERR');
            })
        }
    },
    components: {
        Inner_zixun,
        Inner_zhuanti,
        Inner_links
    }
}
</script>
