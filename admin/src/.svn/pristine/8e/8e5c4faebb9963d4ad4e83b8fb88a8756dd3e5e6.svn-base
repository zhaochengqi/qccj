                    message: '请输入专题标签',
                    trigger: 'change,blur'
                }],
                link_url: [{
                    required: true,
                    message: '请填写专题链接地址',
                    trigger: 'blur'
                }],
                img: [{
                    required: true,
                    message: '请至少上传一张图片',
                    trigger: 'change'
                }],
                daodu: [{
                    required: true,
                    message: '请填写专题导读',
                    trigger: 'blur'
                }]
            }
        }
    },
    methods: {
        onSubmit() {
            this.setData()
        },
        //取消发布
        quxiaoSubmit() {
            this.$router.go(-1)
        },
        CB_Content(content, token) {
            this.form.content = content
        },
        timeChange(value) {
            this.time = value
        },
        //处理数据
        setData() {
            var url
            if (this.$route.params.id) {
                url = this.API_ROOT + '/api/notice/update'
            } else {
                url = this.API_ROOT + '/api/notice/insert'
            }
            this.axios({
                method: 'post',
                url: url,
                data: this.form,
                headers: this.$store.getters.Request_Head
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.$router.go(-1)
                    this.form = {
                        title: '',
                        is_top: '1',
                        fabu_time: '',
                        content: ''
                    }
                }
            }, (error) => {
                this.$emit('API-ERR');
            })
        },
        //编辑页面进来
        getRead() {
            this.loading = true
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/api/notice/read',
                data: {
                    id: this.$route.params.id
                },
                headers: this.$store.getters.Request_Head
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.form = response.data.data
                }
                this.loading = false
            }, (error) => {
                this.$emit('API-ERR');
                this.loading = false
            })
        },
