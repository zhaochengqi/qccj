<template>
    <div class="guanggao index-img-big" v-if="guanggaoData!=null">
        <a :href="guanggaoData.link_url">
            <img v-if="!guanggaoData.img" src="../../assets/img/default.jpg" alt="">
            <img v-else :src="guanggaoData.img+'!335x300'" alt="">
        </a>
        <span class="font-80">广告</span>
    </div>
</template>
<script>
export default {
    created: function() {
        this.getGuanggao()
    },
    data() {
        return {
            guanggaoData: {}
        }
    },
    methods: {
        getGuanggao() {
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/home_api/guanggao',
                data: {
                    type: '资讯详细页面头部广告位'
                }
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.guanggaoData = response.data.data
                }
                this.loading = false
            }, (error) => {
                this.loading = false
                this.$emit('API-ERR');
            })
        }
    }
}
</script>
