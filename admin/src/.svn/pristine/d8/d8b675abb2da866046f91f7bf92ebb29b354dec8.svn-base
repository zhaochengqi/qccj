</template>
<script>
export default {
    created: function() {
        this.getGroup()
    },
    data() {
        return {
            group_title: ''
        }
    },
    methods: {
        getGroup() {
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/api/Authgroup/getinfo',
                headers: this.$store.getters.Request_Head
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.group_title = response.data.data.group_title
                }
            }, (error) => {
                this.$notify.error({
                    title: '啊哦，出错咯！',
                    message: '接口请求失败，赶紧联系工程师抢修吧~',
                    duration: 0,
                    offset: 5
                })
            })
        },
        //退出登录，逻辑处理完后，跳转至登录页面
        logout() {
            let json = {
                userinfo: {},
                rules: []
            }
            this.$store.commit('setUserinfo', json);
            this.$store.commit('setSliderNav', []);

            //判断当前运行环境模式，如果是开发环境则跳转至本系统登录页面，否则跳转至服务端统一入口
            if (process.env.NODE_ENV == 'development') {
                this.$router.push({
                    name: 'login'
                })
            } else {
                window.location.href = process.env.TMPT_ROOT
            }

        },

    },
    computed: {
        userinfo: function() {
            return this.$store.state.userinfo.userinfo
        }
    }
}
</script>
