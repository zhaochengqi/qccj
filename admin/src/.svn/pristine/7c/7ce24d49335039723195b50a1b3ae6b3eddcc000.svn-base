<template>
    <el-card class="box-card">
        <div slot="header" class="clearfix">
            <el-row>
                <el-col :span="24" class="text-right">
                    <goBack></goBack>
                </el-col>
            </el-row>
        </div>
        <el-row :style="{ 'min-height': _PageHeight+'px'}">
            <el-form ref="form" :model="form" :rules="rules" label-width="140px">
                <!-- 注意：增加rules验证 -->
                <el-form-item label="视频名称" prop="title">
                    <el-col :md="16">
                        <el-input v-model="form.title" placeholder="请填写视频名称，必填项"></el-input>
                    </el-col>
                </el-form-item>
                <el-form-item label="是否推荐" required>
                    <el-switch on-text="是" off-text="否" on-value="2" off-value='1' v-model="form.is_tuijian"></el-switch>
                    <el-tooltip class="item" effect="dark" content="如果设置为“是”，则这条视频会显示到“推荐视频”位置中去" placement="top">
                        <i class="ti-help-alt mar-lft "></i>
                    </el-tooltip>
                </el-form-item>
                <el-form-item label="视频图片" required>
                    <el-col :md="12">
                        <QN_upload buttonID="uploadimg" max_file_size="500kb" type="drag" v-on:Callback-UploadProgress="CB_UploadProgress" v-on:Callback-GetFileUrl="CB_GetFileUrl" v-on:Callback-Error="CB_Error"></QN_upload>
                        <div class="el-upload__tip" style="line-height:25px">
                            比例为4 : 3 ，上传jpg/png/bmp格式图片，大小不能超过500KB
                        </div>
                    </el-col>
                    <el-col :md="12">
                        <el-progress type="circle" :percentage="qn_upload.img_upload_progress" :status='qn_upload.img_upload_status' v-if="qn_upload.img_upload_progress>0"></el-progress>
                        <img :src="form.img" alt="" class="thumbnail" v-if="form.img" style="max-width:255px;max-height:200px">
                    </el-col>
                </el-form-item>
                <el-form-item label="视频上传" required>
                    <QN_upload type="drag" v-on:Callback-UploadProgress="CB_UploadProgress1" v-on:Callback-GetFileUrl="CB_GetFileUrl1" v-on:Callback-Error="CB_Error1"></QN_upload>
                </el-form-item>
                <el-form-item label="视频介绍">
                    <vueEditor :editContent="form.content" @Callback-Content="CB_Content"></vueEditor>
                </el-form-item>
                <hr>
                <el-form-item label="页面关键词（SEO）">
                    <el-select v-model="form.keyswords" multiple filterable allow-create placeholder="请选择或填写关键词内容，尽量填写能够定位当前资讯内容的准确关键词，数量不要太多，非必填项" style="width:100%">
                        <el-option v-for="item in news_source_data" :key="item" :label="item" :value="item">
                        </el-option>
                    </el-select>
                </el-form-item>
                <el-form-item label="页面描述（SEO）">
                    <el-input type="textarea" :autosize="{ minRows: 2, maxRows: 4}" placeholder="50字以内，主要显示到网页源码中的“description”属性中，利于搜索引用优化，非必填项" v-model="form.miaoshu"></el-input>
                </el-form-item>
                <el-form-item label="发布日期" required>
                    <el-col :md="8">
                        <el-date-picker v-model="form.add_time" type="datetime" placeholder="选择资讯发布时间" style="width:100%" @change="timeChange" format='yyyy-MM-dd HH:mm'>
                        </el-date-picker>
                    </el-col>
                </el-form-item>
                <el-form-item>
                    <el-button type="primary" size="large" :loading='loadingbiao' @click="onSubmit">保存视频信息</el-button>
                    <el-button @click="quxiaoSubmit" size="large">取消</el-button>
                </el-form-item>
            </el-form>
        </el-row>
    </el-card>
</template>
<script>
import Vue from 'vue'
import QN_upload from '@/components/qiniu-upload'

//导入vuex辅助函数
import {
    mapState,
    mapGetters
} from 'vuex'

//导入编辑器组件（共用）
import vueEditor from '@/components/editor'
import goBack from '@/components/goBack'

export default {
    activated: function() {
        if (this.$route.params.id) {
            this.getData()
        } else {
            this.form.add_time = new Date()
        }
    },
    data() {
        return {
            //上传表单数据
            form: {
                title: '',
                is_tuijian: '1',
                miaoshu: '',
                keywords: '',
                content: '',
                add_time: '',
                img: ''
            },
            qn_upload: {
                img_upload_progress: 0,
                img_upload_status: ''
            },
            //时间选择
            time: '',
            //验证器
            rules: {
                title: [{
                    required: true,
                    message: '请填写视频名称！',
                    trigger: 'blur'
                }]
            },
            //按钮loading
            loadingbiao: false
        }
    },
    methods: {
        //新闻资讯选择
        zixunSelect(val) {
            let jishu = 0;
            for (var i in this.news_source_data) {
                if (this.news_source_data[i] == val)
                    jishu++;
            }
            //如果没有此项就存入数据仓库
            if (!jishu) this.$store.commit('setNewsSourceType', val);
        },
        //提交数据
        onSubmit() {
            this.loadingbiao = true;
            console.log(this.form)
            this.$refs['form'].validate((valid) => {
                if (valid) {
                    this.setData();
                } else {
                    this.loadingbiao = false
                    return false;
                }
            });
        },
        //取消发布
        quxiaoSubmit() {
            this.$router.go(-1)
        },
        //详细内容
        CB_Content(content, token) {
            this.form.content = content
        },
        //时间选择后
        timeChange(value) {
            this.time = value
        },
        //处理数据
        setData() {
            var url
            if (this.$route.params.id) {
                url = this.API_ROOT + '/api/news/update';
            } else {
                url = this.API_ROOT + '/api/news/insert';
            }
            this.form.add_time = this.time;
            this.axios({
                method: 'post',
                url: url,
                data: this.form,
                headers: this.$store.getters.Request_Head
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.$router.go(-1)
                    this.form = {
                        title: '',
                        is_top: '1',
                        fabu_time: '',
                        content: ''
                    }
                }
            }, (error) => {
                this.$emit('API-ERR');
            })
        },
        //编辑页面进来
        getData() {
            this.axios({
                method: 'post',
                url: this.API_ROOT + '/api/news/read',
                data: {
                    id: this.$route.params.id
                },
                headers: this.$store.getters.Request_Head
            }).then((response) => {
                if (response.data.status.code !== 1001) {
                    this.$message.error(response.data.data ? response.data.data : response.data.status.title)
                } else {
                    this.form = response.data.data
                }
                this.loading = false
            }, (error) => {
                this.$emit('API-ERR');
                this.loading = false
            })
        },
        //图片上传成功
        handleAvatarSuccess() {

        },
        //图片上传之前执行
        beforeAvatarUpload() {

        },

        /**
         * [回调处理七牛上传相关数据]
         * 其他更多回调方法参考 七牛组件
         */
        //文件加入到上传队列
        CB_addFile(file) {
            console.log(file)
        },

        //上传文件之前
        CB_Beforeupload(file) {
            console.log(file)
        },

        //文件上传过程，主要用于展现上传进度
        CB_UploadProgress(file) {
            // console.log('已经上传：' + file.percent)
            this.qn_upload.img_upload_progress = file.percent
            if (file.percent == 100) {
                this.qn_upload.img_upload_status = 'success'
            }
        },

        //获取文件上传成功后返回的文件路径
        CB_GetFileUrl(file) {
            console.log(file)
            this.qn_upload.img_upload_progress = 0
            this.qn_upload.img_upload_status = ''
            this.form.img = file
        },

        //获取上传错误信息
        CB_Error(err, info) {
            console.log(info)
            this.qn_upload.img_upload_status = 'exception'
        }



    },
    //计算属性
    computed: {
        ...mapGetters({
            headersImage: 'Request_Head'
        }),
        ...mapState({
            news_source_data: state => state.news_source_type

        }),
    },
    //注意别忘记挂载组件
    components: {
        vueEditor,
        goBack,
        QN_upload
    }
}
</script>
